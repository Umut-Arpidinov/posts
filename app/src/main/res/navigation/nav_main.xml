<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.sultanposts.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_chooseBranchFragment"
            app:destination="@id/chooseBranchFragment" />
    </fragment>
    <fragment
        android:id="@+id/ticketsFragment"
        android:name="com.example.sultanposts.presentation.tickets.TicketsFragment"
        android:label="fragment_tickets"
        tools:layout="@layout/fragment_tickets" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.sultanposts.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/chooseBranchFragment"
        android:name="com.example.sultanposts.presentation.branch.ChooseBranchFragment"
        android:label="fragment_choose_branch"
        tools:layout="@layout/fragment_choose_branch">
        <action
            android:id="@+id/action_chooseBranchFragment_to_servicesFragment"
            app:destination="@id/servicesFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.sultanposts.presentation.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.sultanposts.presentation.branch.services.ServicesFragment"
        android:label="ServicesFragment"
        tools:layout="@layout/services_fragment">
        <argument
            android:name="branch"
            app:argType="com.example.sultanposts.domain.enitity.Branch"
            app:nullable="false" />
        <action
            android:id="@+id/action_servicesFragment_to_serviceDetailedFragment"
            app:destination="@id/serviceDetailedFragment" />
    </fragment>
    <fragment
        android:id="@+id/serviceDetailedFragment"
        android:name="com.example.sultanposts.presentation.branch.service_detailed.ServiceDetailedFragment"
        android:label="ServiceDetailedFragment">
    </fragment>
    <fragment
        android:id="@+id/selectDateFragment"
        android:name="com.example.sultanposts.presentation.selectDate.SelectDateFragment"
        android:label="fragment_select_date"
        tools:layout="@layout/fragment_select_date" />

</navigation>